@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 

<ul>
  @foreach(Review review in Model)
  {
    <li>@Html.ActionLink($"{review.Critic}", "Details", new { id = review.ReviewId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new cuisine", "Create", "Cuisine")</p>
<p>@Html.ActionLink("Add new Restaurant", "Create", "Restaurants")</p>
<p>@Html.ActionLink("Add new review", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
