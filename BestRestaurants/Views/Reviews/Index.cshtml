@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 
else
{
  <ul>
    @foreach(Review review in Model)
    {
      <li>@Html.ActionLink($"{review.Critic}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</li>
    }
  </ul>
}

